pipeline {
    agent any
    enviroment{
        NEW_VERSION="1.3.8"
        SERVER_CREDENTIAL=credentials=credentials('Server-credentials')
    }
    stages {
        stage('build') {
            steps {
                echo 'building the application'
                echo "building the application_version ${NEW_VERSION}"

            }
        }
        stage('test') {
            steps {
                echo 'testing   the application'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying    the application'
                echo "deploy the application ${SERVER_CREDENTIAL}"
                sh  "${SERVER_CREDENTIAL}"

            }
        }
    }
}
