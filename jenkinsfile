def gv
pipeline {
    agent any

    // environment {
    //     DOCKER_BUILDKIT = '1'
    // }
    tools{
        maven "maven_3.9"
    }
    stages {
        stage("init")
        {
            stage{
                script{
                    gv=load "script.groovy"
                }
            }
        }
        stage("Build jar"){
            steps{
                script{
                    gv.build_Jar()
                }
            }
        }
        stage("Build image"){
            steps{
                script{
                    gv.buildImage()                    
                }
            }
        }
        stage("deploy") {
            steps {
                script{
                    echo "deployiong the application"
                }
            }
        }
    }
    
}

