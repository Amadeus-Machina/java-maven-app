def gv
pipeline {
    agent any

         environment{
         NEW_VERSION="1.3.8"
     }

    
    stages {
        stage("init"){
            steps{
                script{
                    gv=load "script.groovy"
                }

            }

        }
        stage('build') {
            steps {
                script{
                    gv.buildApp()
                }

            }
        }
        stage('test') {
                script{
                    gv.testApp()
                }
        }
        stage('deploy') {
            steps {
                script{
                    gv.deployApp()
                }
                }

            }
        }
    
}

