#!/usr/bin/env groovy


def gv

pipeline {
    agent any
    tools {
        maven 'maven3.8.7'
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage ('increment version') {
            steps {
                script {
                    gv.incrementVersion()
                }
            }
        }
        stage ( 'build jar' ){
            steps {
                script {
                    gv.buildJar()
                    sh "echo test triger.."
                }
            }
        }
        stage ( 'building image ' ){
            steps {
                script {
                    gv.buildImage()
                }
            }

        }
        
        stage ( 'deploy' ){
            steps {
                script {
                   gv.deployApp()
                }
            }
        }
        stage ('commit version update') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'last-gitlab', passwordVariable: 'PASS', usernameVariable: 'USER')]){
        sh 'git config --global user.email "jenkins@example.com"'
        sh 'git config --global user.name "jenkins"'

        sh 'git status'
        sh 'git branch'
        sh 'git config --list'

        sh "git remote set-url origin https://${USER}:${PASS}@gitlab.com/yassermagdy430/java-maven-app.git"
        sh 'git add .'
        sh 'git commit -m "ci: version update"'
        sh 'git push origin HEAD:jenkins-jobs'
    }

                }
            }
        }
    }
}
