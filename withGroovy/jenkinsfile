#!/usr/bin/env groovy


def gv

pipeline {
    agent any
    tools {
        maven 'maven3.8.7'
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage ('increment version') {
            steps {
                script {
                    gv.incrementVersion()
                }
            }
        }
        stage ( 'build jar' ){
            steps {
                script {
                    gv.buildJar()
                    sh "echo test triger.."
                }
            }
        }
        stage ( 'building image ' ){
            steps {
                script {
                    gv.buildImage()
                }
            }

        }
        
        stage ( 'deploy' ){
            steps {
                script {
                   gv.deployApp()
                }
            }
        }
        stage ('commit version update') {
            steps {
                script {
                    gv.commitVersionUpdate()
                }
            }
        }
    }
}
