def gv

pipeline {
    agent any
    tools {
        maven 'maven3.8.7'
    }
    stages {
        stage ('init') {
            steps{
                script {
                    gv = load "scritp.groovy"
                }
            }
        }
        stage ( 'build jar' ){
            steps {
                script {
                    gv.buildJar()
                }
            }
        }
        stage ( 'building image ' ){
            steps {
                script {
                    gv.buildImage()
                }
            }

        }
        
        stage ( 'deploy' ){
            steps {
                script {
                   gv.deployApp()
                }
            }
        }
    }
}
