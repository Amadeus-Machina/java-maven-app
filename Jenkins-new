pipeline {
    agent any 
    tools {
        maven 'Maven'
    }
    stages {
        stage("build jar") {
            steps {
                script {
                    echo "building the application..."
                    echo "building the integration..."
                    sh 'mvn package'
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    echo "building docker image..."
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        sh 'docker build -t kachi79/kach_test79:jma-3.0 .'
                        sh "echo $PASS | docker login -u $USER --password-stdin"
                        sh ' docker push kachi79/kach_test79:jma-3.0'
                    }
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploying the application..."
                    echo "building the integration..."
                }
            }
        }  
    }
}
