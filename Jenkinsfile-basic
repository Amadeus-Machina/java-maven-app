#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {                    
                    def dockerCmd = 'docker run -p 3080:3080 -d waseemkhandocker/my-docker-repo:1.0'
                    sshagent(['ec2-server-key']) {
                        sh "sh -o StrictHostKeyChecking=no ubuntu@3.110.173.67 ${dockerCmd}"
                        }
                }
            }
        }
    }
}
