def gv

pipeline {
    agent any
    
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'production', description: 'The environment to deploy to')
        choice(name: 'ENVIRONMENT_TYPE', choices: ['production', 'development', 'testing'], description: 'Select the environment type')
    }
    
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage("build jar") {
            steps {
                script {
                    echo "building jar"
                    gv.buildJar()
                }
            }
        }

            steps {
                script {
                    def userInput = input(
                        message: "Enter the version of the application to deploy",
                        parameters: [
                            string(name: 'VERSION', defaultValue: '1.0.0', description: 
                            'The version of the application to deploy')
                        ]
                    )
                    echo "User input version: ${userInput.VERSION}"
                }
            }
    
        stage("deploy") {
            when {
                expression {
                    params.ENVIRONMENT == 'production'
                }
            }
            steps {
                script {
                    echo "deploying"
                    gv.deployApp()
                }
            }
        }
    }   
}

